<Avocado>:
    problem: _problem
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            id: manager
            Screen:
                name: 'landing'
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (0.952941176   ,0.949019608,0.933333333)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        font_name: 'SkarpaLt.ttf'
                        color: (0,0,0, 1)
                        pos_hint: {'x': 0, 'y': 0.4}
                        text: 'Newtonly'
                        font_size: '75dp'

                    Label:
                        color: (0,0,0, 1)
                        pos_hint: {'x': 0, 'y': 0.3}
                        text: 'Pocket professor'
                        font_size: '15dp'

                    Image:
                        source: 'logo.png'
                        pos_hint: {'x': 0.1, 'y': 0.1}
                        size_hint: (0.8, 0.8)
                        allow_stretch: True

                    Button:
                        size_hint: (1, 0.1)
                        pos_hint: {'x': 0, 'y': 0}
                        text: 'Get started'
                        on_release: manager.current = 'augmentation'

            Screen:
                name: 'augmentation'
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (0.952941176   ,0.949019608,0.933333333)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                GridLayout:
                    size_hint_x: 1
                    size_hint_y: 1
                    rows:2
                    TextInput:
                        id: _problem
                        hint_text: 'Input your related rates problem here!'
                Button:
                    size_hint: (1,0.1)
                    pos_hint: {'x': 0, 'y': 0}
                    text: "Get help!"                   
                    on_press: print(str(_problem.text))
                    on_press: root.solver(str(_problem.text),'ladder')
                    on_release: manager.current = 'illustrate'
